---
import { ClientRouter } from "astro:transitions";
import AsideMenu from "../components/AsideMenu.astro";
import "../styles/global.css";
import { Player } from "@/components/Player";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ClientRouter fallback="none" />
	</head>
	<body>
		<div id="app" class="relative h-screen p-2 gap-2">
			<aside class="[grid-area:aside] flex-col flex overflow-y-auto">
				<AsideMenu />
			</aside>
			<main class="[grid-area:main] rounded bg-zinc-900 overflow-y-auto">
				<slot />
			</main>
			<footer class="[grid-area:player] min-h-25">
				<Player client:load transition:name="media-player" transition:persist />
			</footer>
		</div>
	</body>
</html>

<style>
	#app {
		display: grid;
		grid-template-areas:
			"aside main"
			"player player";
		grid-template-columns: 350px 1fr;
		grid-template-rows: 1fr auto;
	}
</style>

<style is:global>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: "CircularStd", system-ui, sans-serif;
		background: #020202;
		color: white;
	}

	@font-face {
		font-family: "CircularStd";
		src: url("/fonts/CircularStd-Medium.woff2") format("woff2");
		font-weight: 500;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: "CircularStd";
		src: url("/fonts/CircularStd-Bold.woff2") format("woff2");
		font-weight: 700;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: "CircularStd";
		src: url("/fonts/CircularStd-Black.woff2") format("woff2");
		font-weight: 900;
		font-style: normal;
		font-display: swap;
	}
</style>
