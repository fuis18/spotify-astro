---
import type { Playlist } from "@/lib/data";
import CardPlayButton from "./CardPlayButton";

interface Props {
	playlist: Playlist;
}
const { playlist } = Astro.props;
const { id, artists, cover, title } = playlist;
const artistsString = artists.join(", ");
---

<article
	class="group relative shadow-lg hover:shadow-xl bg-zinc-500/30 hover:bg-zinc-800 rounded-md transition-all duration-300"
>
	<div
		class=`absolute right-4 bottom-20 translate-y-4 transition-all duration-300 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 z-10`
	>
		<CardPlayButton id={id} client:visible />
	</div>

	<a
		class="playlist-item flex flex-col relative p-2 overflow-hidden gap-2 pb-6 transition-all duration-300 w-44"
		href={`/playlist/${id}`}
		transition:name=`playlist ${id} box`
	>
		<picture class="aspect-square w-full h-auto rounded-md flex-none">
			<img
				src={cover}
				alt={`Cover of ${title} by ${artistsString}`}
				class="object-cover w-full h-full rounded-md"
				transition:name=`playlist ${id} image`
			/>
		</picture>
		<div class="flex flex-auto flex-col truncate px-2">
			<h4 class="text-sm text-white" transition:name=`playlists ${id} title`>
				{title}
			</h4>
			<span
				class="text-xs text-gray-400"
				transition:name=`playlists ${id} artists`>{artistsString}</span
			>
		</div>
	</a>
</article>
